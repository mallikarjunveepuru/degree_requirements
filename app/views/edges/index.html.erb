<p id="notice"><%= notice %></p>

<h1>Listing Edges</h1>

<table>
  <thead>
    <tr>
      <th>Child</th>
      <th>Parent</th>
      <th>Child klass</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @edges.each do |edge| %>
      <tr>
        <td><%= edge.child_id %></td>
        <td><%= edge.parent_id %></td>
        <td><%= edge.child_klass %></td>
        <td><%= link_to 'Show', edge %></td>
        <td><%= link_to 'Edit', edit_edge_path(edge) %></td>
        <td><%= link_to 'Destroy', edge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

